<% @subjects.each do |subject| %>
  <tr>
    <td><%= subject.name %></td>
    <td><%= subject.resource_id %></td>
    <td><%= subject.graded %></td>
    <td><%= subject.studentupdate %></td>
    <td><%= subject.AssignOnMonday %></td>
    <td><%= subject.AssignOnTuesday %></td>
    <td><%= subject.AssignOnWednesday %></td>
    <td><%= subject.AssignOnThursday %></td>
    <td><%= subject.AssignOnFriday %></td>
    <td><%= link_to 'Add Assignments', subject %></td>
    <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
    <td><%= link_to 'Destroy', subject, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

